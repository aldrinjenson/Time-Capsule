# Time Capsule Configuration

# Screen Recording Settings
SCREEN_RECORDING_FPS=0.5
SCREEN_RECORDING_INTERVAL=5
SCREEN_RECORDING_RETENTION_DAYS=30

# Audio Recording Settings
AUDIO_RECORDING_INTERVAL=5

# Text Capture Settings
TEXT_CAPTURE_ENABLED=true
TEXT_CAPTURE_STORAGE_INTERVAL=30

# Output Directories
SCREEN_RECORDING_OUTPUT_DIR=/path/to/screen/recordings
AUDIO_RECORDING_OUTPUT_DIR=/path/to/audio/recordings
TEXT_CAPTURE_OUTPUT_DIR=/path/to/text/recordings

# Tokenization Settings
TOKEN_LIMIT=2000

# System Information
EXCLUDE_APPS=["Private App 1", "Private App 2"]
EXCLUDE_WINDOWS=["Private Window 1", "Private Window 2"]